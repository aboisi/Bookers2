    <h1>Editing Book</h1>
    
    <!--エラーメッセージ-->　
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    
    <%= form_with model: @book do |f| %>
    
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    
    <p><%= f.submit 'Update Book' %></p>
    
   <p><%= link_to "Show", book_path(@book.id) %> |
    
    <%= link_to "Back", books_path %></p>
    
    <% end %>