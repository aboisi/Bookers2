<!--<h1>Books#index</h1>-->
<!--<p>Find me in app/views/books/index.html.erb</p>-->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
  <% end %>
</div>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <!--<h4>画像</h4>-->
  <%#= f.file_field :image, accept: "image/*" %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<!--投稿一覧-->
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    <p>Title：
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    </p>
    <p>Opinion：<%= book.body %></p>
    <p>name：<%= book.user.name %></p>
  </div>
<% end %>