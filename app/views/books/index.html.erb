<!--<h1>Books#index</h1>-->
<!--<p>Find me in app/views/books/index.html.erb</p>-->
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    <p>投稿ユーザー画像：<%#= image_tag 'sample-author1.jpg' %></p>
    <p>Title：<%= book.title %></p>
    <p>Opinion：<%= book.body %></p>
    <p>name：<%= book.user.name %></p>
  </div>
<% end %>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <!--<h4>画像</h4>-->
  <%#= f.file_field :image, accept: "image/*" %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>