<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--プロフィール-->
      <%= render 'books/profile', user: @user %>

      <!--投稿フォーム-->
      <%= render 'books/newbook', newbook: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- ユーザー一覧 -->
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>