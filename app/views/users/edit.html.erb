<div class="container">
  <div class="row">
    <div class="offset-md-3"></div>
    <div class="col-md-6">
      <h1>User info</h1>
      <!--エラーメッセージ-->
      <%= render 'books/error', newbook: @newbook %>

      <!--プロフィール-->
      <%= form_with model: @newbook do |f| %>

        <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :size=>"60"%>
  
        <label for="inputImage", class="mt-3">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  
        <label for="inputIntroduction", class="mt-3">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文", :size=>"60"%>
  
        <p class="mt-2"><%= f.submit "Update User", class: "btn btn-sm btn-primary btn-secondary" %></p>
      <% end %>
    </div>
    <div class="offset-md-3"></div>
  </div>
</div>
